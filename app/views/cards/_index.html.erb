<h1>Cards</h1>

<table>
  <tr>
    <td>#</td>
    <td>Title</td>
    <td>Action</td>
  </tr>
<% cards.each do |card| %>
  <tr>
    <td><%= card.id %></td>
    <td><%= card.title %></td>
    <td>
      <%= link_to 'Show', project_card_path(card.project, card) %> | 
      <%= link_to 'Edit', edit_project_card_path(card.project, card) %> | 
      <%= link_to 'Destroy', project_card_path(card.project, card), :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
